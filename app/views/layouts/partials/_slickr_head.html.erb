<% if @slickr_page %>
  <title><%= slickr_page_title %></title>
  <meta name="description" content='<%= @slickr_page.meta_description %>'>

  <!-- Open Graph data for Facebook -->
  <meta content='article' property='og:type'>
  <meta content='<%= @slickr_settings[:site_title] %>' property='og:site_name'>
  <meta content='<%= @slickr_page.og_title %>' property='og:title'>
  <meta content='<%= @slickr_page.og_description %>' property='og:description'>
  <meta content='<%= @slickr_settings[:domain].gsub(/\/+$/, '') %>/<%= params[:slug] %>' property='og:url'>
  <meta content='' property='og:image'>


  <!-- Twitter Card data -->
  <meta content='summary' name='twitter:card'>
  <meta content='<%= @slickr_page.twitter_title %>' name='twitter:title'>
  <meta content='<%= @slickr_page.twitter_description %>' name='twitter:description'>
  <meta content='' name='twitter:image'>
<% else %>
  <title><%= slickr_page_title %></title>
  <meta name="description" content='<%= @slickr_settings[:meta_description] %>'>

  <!-- Open Graph data for Facebook -->
  <meta content='article' property='og:type'>
  <meta content='<%= @slickr_settings[:site_title] %>' property='og:site_name'>
  <meta content='<%= @slickr_settings[:facebook_og_title] %>' property='og:title'>
  <meta content='<%= @slickr_settings[:facebook_og_description] %>' property='og:description'>
  <meta content='' property='og:url'>
  <meta content='' property='og:image'>


  <!-- Twitter Card data -->
  <meta content='summary' name='twitter:card'>
  <meta content='<%= @slickr_settings[:twitter_title] %>' name='twitter:title'>
  <meta content='<%= @slickr_settings[:twitter_description] %>' name='twitter:description'>
  <meta content='' name='twitter:image'>
<% end %>

<% if Rails.env == 'production' %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
    ga('create', '<%= @slickr_settings[:google_analytics_tracking_id] %>', 'auto');
    ga('send', 'pageview');
  </script>
<% end %>
